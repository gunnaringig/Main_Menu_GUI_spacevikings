                <StackPanel>
                    <TextBlock Text="Store" Height="35" FontSize="25" HorizontalAlignment="Center"></TextBlock>
                </StackPanel>

                <StackPanel Background="White" >
                    <StackPanel Orientation="Horizontal" Height="110">
                        <StackPanel Width="220"  Orientation="Horizontal">
                            <StackPanel Width="110">
                                <!--<Image Source="Inventory/helmet.png"></Image>-->
                            </StackPanel>
                            <StackPanel Width="100">
                                <TextBlock Text="Helmet" FontSize="20" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="Makes you look" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="really cool!" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Width="220" Orientation="Horizontal">
                            <StackPanel Width="110">
                                <!--<Image Source="Inventory/Gloves.png"></Image>-->
                            </StackPanel>
                            <StackPanel Width="100">
                                <TextBlock Text="Gloves" FontSize="20" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="Nice to have" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="when its cold" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Height="110">
                        <StackPanel Width="220"  Orientation="Horizontal">
                            <StackPanel Width="110">
                                <!--<Image Source="Inventory/helmet.png"></Image>-->
                            </StackPanel>
                            <StackPanel Width="100">
                                <TextBlock Text="Helmet" FontSize="20" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="Makes you look" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="really cool!" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Width="220" Orientation="Horizontal">
                            <StackPanel Width="110">
                                <!--<Image Source="Inventory/Gloves.png"></Image>-->
                            </StackPanel>
                            <StackPanel Width="100">
                                <TextBlock Text="Gloves" FontSize="20" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="Nice to have" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="when its cold" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Height="110">
                        <StackPanel Width="220"  Orientation="Horizontal">
                            <StackPanel Width="110">
                                <!--<Image Source="Inventory/helmet.png"></Image>-->
                            </StackPanel>
                            <StackPanel Width="100">
                                <TextBlock Text="Helmet" FontSize="16" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="Makes you look" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="really cool!" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Width="220" Orientation="Horizontal">
                            <StackPanel Width="110">
                                <!--<Image Source="Inventory/Gloves.png"></Image>-->
                            </StackPanel>
                            <StackPanel Width="100">
                                <TextBlock Text="Gloves" FontSize="16" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="Nice to have" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                                <TextBlock Text="when its cold" FontSize="12" HorizontalAlignment="Center" ></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <Grid>
                    <Button Content="Close Store"
                            Command="{Binding CloseStoreWindowCommand}" 
                    />
                </Grid>


            </StackPanel>

            <StackPanel Width="101" HorizontalAlignment="Right" Background="black"/>

        </StackPanel>
    </Grid>
</UserControl>